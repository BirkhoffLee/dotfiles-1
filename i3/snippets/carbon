### carbon config ###

# monitor layout is [1][2]
set $disp1 DisplayPort-0
set $disp2 DisplayPort-1
exec xrandr --output $disp2 --right-of $disp1

# fill up backgrounds
exec feh --recursive --randomize --bg-fill ~/Pictures/4k-wallpaper


#  App Bindings ########
assign [instance="^crx_nckgahadagoaajjgafhacjanaoiihapd$"] hangouts
#assign [instance="^crx_clhhggbfdinjmjhajaheehoeibfljjno$"] telegram
assign [class="^TelegramDesktop$"] telegram
assign [class="^Standard Notes$"] notes
# startup apps
exec --no-startup-id nm-applet
exec fluxgui
exec ssh-agent
exec glipper

# update mouse speed
# exec "xset mouse 13/10 0"
exec 'xset m 1/2 8'

## feh override
exec --no-startup-id "feh --recursive --randomize --bg-fill ~/Pictures/4k-wallpaper"

# redshift
exec --no-startup-id redshift -m randr -l 40.021719:-105.2602 -t 5700:3700 -r

# DPI override
exec --no-startup-id "xrandr --dpi 137"
